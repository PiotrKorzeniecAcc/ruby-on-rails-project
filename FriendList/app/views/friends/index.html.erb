<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Points</th>
      <th>Best friend</th>
      <th colspac="10"></th>
    </tr>
  </thead>
  <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name%></td>
          <td><%= friend.email %></td>
          <td><%= friend.birthday%></td>
          <td><%= friend.points%></td>
          <td><%= friend.best_friend%></td>
          <td><%= link_to 'Show', friend, class: "btn btn-link btn-sm" %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-info btn-sm" %></td>
          <td>
            <%= link_to 'Delete', friend, method: :delete,
                data: { confirm: 'Are you sure?' },
                class: "btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>